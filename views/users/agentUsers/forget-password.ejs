    <!-- Custom fonts for this template-->
    <link
      href="stylesheets/fontawesome-all.css"
      rel="stylesheet"
      type="text/css"
    />
    <link rel="stylesheet" href="/stylesheets/bootstrap.css" />
    <link
      href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
      rel="stylesheet"
    />

    <link
    rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css"
  />

    <!-- Custom styles for this template-->
    <link href="stylesheets/sb-admin-2.min.css" rel="stylesheet" />
    <style>
      .whole-body{
        height: 699px;
        background: #5A3F37; 
        background: -webkit-linear-gradient(to right, #14bf98, #5A3F37);
        background: linear-gradient(to right, #14bf98, #5A3F37); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
      }
      .natekyi{
        background-color: #14bf98;
      }

   
    </style>
  </head>
<div class="whole-body">
  <body class="bg-gradient-primary">
    <div class="container">
      <!-- Outer Row -->
      <div class="row justify-content-center">
        <div class="col-xl-10 col-lg-12 col-md-9">
          <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
              <!-- Nested Row within ard Body -->
              <div class="row">
                <div class="col-lg-6 d-none d-lg-block">
                  <img
                    class="img-fluid m-4"
                    src="/images/forgotpassword.svg"
                    alt=""
                  />
                </div>
                <div class="col-lg-6">
                  <div class="p-5">
                    <div class="text-center">
                      <h1 class="h4 text-gray-900 mb-2" style="color: #14bf98;">
                        သင့်စကားဝှက်ကို မေ့နေပါသလား?
                      </h1>
                      <p class="mb-4" style="line-height: 30px;">
                        သင်၏စကားဝှက်ပြောင်းလဲရန်အတွက် အကောင့်ပြုလုပ်ထားသော အီးမေးလ်ကို
                        ပြန်လည်ထည့်သွင်းပေးရပါမည်။
                      </p>
                    </div>
                    <% if(typeof message !== 'undefined'){ %>
                      <div
                        class="alert alert-success alert-dismissible fade show"
                      >
                        <button type="button" class="close" data-dismiss="alert">
                          &times;
                        </button>
                        <h2
                          style="
                            font-weight: lighter;
                            font-size: small;
                            line-height: 1.6;
                          "
                        >
                          <%= message %>
                        </h2>
                      </div>
                      <% } %>
                    <form class="user" action="/users/aforgetpassword" method="post">
                      <div class="form-group">
                        <input
                          type="email"
                          class="form-control form-control-user"
                          id="agentEmail"
                          name="agentEmail"
                          aria-describedby="emailHelp"
                          placeholder="အီးမေးလ် ထည့်ရန်"
                        />
                      </div>
                      <!-- <a href="" class="btn btn-dark btn-block natekyi" >
                        အတည်ပြုမည်

                      </a> -->
                      <input class="btn btn-dark btn-block natekyi" type="submit" value="စကားဝှက်ပြောင်းရန်">
                    </form>
                    <hr />
                 
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
</body>
</div>

<script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.slim.min.js"></script>
