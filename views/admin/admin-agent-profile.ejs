<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta content="width=device-width, initial-scale=1.0" name="viewport" />

    <title>Agent Profile by Admin</title>
    <link rel="shortcut icon" href="/images/bbb.png" type="image/png" />

    <meta content="" name="description" />
    <meta content="" name="keywords" />

    
    <!-- Google Fonts -->
    <link
      href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Raleway:300,300i,400,400i,500,500i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i"
      rel="stylesheet"
    />

    <!-- Vendor CSS Files -->
    <link href="/vendor/aos/aos.css" rel="stylesheet" />
   
    <link rel="stylesheet" href="/stylesheets/bootstrap.css">
    
    <link href="/vendor/boxicons/css/boxicons.min.css" rel="stylesheet" />
    <link
      href="/vendor/glightbox/css/glightbox.min.css"
      rel="stylesheet"
    />
    <link href="/vendor/swiper/swiper-bundle.min.css" rel="stylesheet" />

    <!-- Template Main CSS File -->
    <link href="/stylesheets/styleadmin.css" rel="stylesheet" />

    <a href="/stylesheets/for-agent-profile-detail.css"></a>
    <link
      rel="stylesheet"
      href="https://cdn-uicons.flaticon.com/uicons-regular-rounded/css/uicons-regular-rounded.css"
    />
    <style>
      .whole-body {
        background: #5a3f37;
        background: -webkit-linear-gradient(to right, #2c7744, #5a3f37);
        background: linear-gradient(to right, #2c7744, #5a3f37);
      }
    </style>

    

  <body>
    <i class="fi fi-rr-menu-burger mobile-nav-toggle d-xl-none"></i>
    
    <!-- ======= Header ======= -->
    <header id="header">
      <div class="d-flex flex-column">
        <div class="profile">
          <img src="images/bagan.jpg" alt="" class="img-fluid rounded-circle" />
          <h1 class="text-light"><a href="index.html">Admin name here</a></h1>
          <div class="social-links mt-3 text-center">
            <a href="#" class="twitter"><i class="bx bxl-twitter"></i></a>
            <a href="#" class="facebook"><i class="bx bxl-facebook"></i></a>
            <a href="#" class="instagram"><i class="bx bxl-instagram"></i></a>
            <a href="#" class="google-plus"><i class="bx bxl-skype"></i></a>
            <a href="#" class="linkedin"><i class="bx bxl-linkedin"></i></a>
          </div>
        </div>

        <nav id="navbar" class="nav-menu navbar">
          <ul>
            <li>
              <a href="/adminpage" class="nav-link scrollto "
                ><i class="fi fi-rr-home"></i> <span>Home</span></a
              >
            </li>
            <li>
              <a href="#about" class="nav-link scrollto">
                <i class="fi fi-rr-user"></i><span>Profile</span></a
              >
            </li>
            

            <li>
              <a href="/adminpage/normallist" class="nav-link scrollto"
                ><i class="fi fi-rr-users-alt"></i>
                <span>Normal Users List</span></a
              >
            </li>
            <li>
              <a href="/adminpage/adminpostlist" class="nav-link scrollto"
                ><i class="fi fi-rr-apps"></i> <span>Agent Posts List</span></a
              >
            </li>
            <li>
              <a href="/adminpage/agentlist" class="nav-link scrollto active"
                ><i class="fi fi-rr-users"></i> <span>Agent Users List</span></a
              >
            </li>
          </ul>
        </nav>
        
      </div>
    </header>

  
    <main id="main" class="whole-body" style="background-color: gray;">
      <section id="breadcrumbs" class="breadcrumbs">
        <div class="container">
          <div class="d-flex justify-content-between align-items-center">
            <h2 class="section-title">Agent Profiles</h2>
            <!-- <ol>
              <li><a href="/adminpage">Home</a></li>
              <li><a href="/adminpage/agentlist">Post List</a></li>
            </ol> -->
          </div>
        </div>
      </section>
     <section id="portfolio-details" class="portfolio-details " >
        <div class="container ">
          <div class="row gy-4">
            <div class="col-lg-4">
              <div class="row">
                <div >
                <img src="/images/bagan.jpg" class="img-fluid rounded" alt="" />
              </div>
              
            </div>
            
            
          </div>
          <div class="col-lg-8 pt-4 pt-lg-0 content">
          <h3><%= ausers.agentName%></h3>

            <br><br>
            <div class="row">
              <div class="col-lg-6">
                <ul>
                  <li>
                    <i class="bi bi-chevron-right"></i>
                    <strong>Phone:</strong>
                    <span><%= ausers.agentPhone%></span>
                  </li>
                  <br />
                  <li>
                    <i class="bi bi-chevron-right"></i>
                    <strong>Email:</strong>
                    <span><%= ausers.agentEmail%></span>
                  </li>
                  <br />
                  <li>
                    <i class="bi bi-chevron-right"></i>
                    <strong>City:</strong> <span><%= ausers.agentCity%></span>
                  </li>
                  <li>
                    <i class="bi bi-chevron-right"></i>
                    <strong>Total Posts:</strong> <span><%=ausers.length%></span>
                  </li>
                  <br />

              
            </div>
            <p><%= ausers.agentBio%></p>
          </div>
          <div class="ml-4">
            <% if(ausers.normalisact_ban == false){ %>
            <button type="button" class="btn btn-success" onclick="changeStatus('active','<%= ausers._id %>')">active</button>
            <%}else{%>
            <button type="button" class="btn btn-secondary" onclick="changeStatus('inactive','<%= ausers._id %>')">ban</button>
            <% } %>
            <button type="button" class="btn " style="background-color: red;" onclick="choose('<%= ausers._id %>')">delete</button>
          </div>
        </div>

        <section id="portfolio" class="portfolio section-bg"  style="background-color: transparent;"  >
          <div class="container" data-aos="fade-up">
            <div class="section-title">
              <h2>Post List</h2>
            </div>
            <div
            class="row portfolio-container"
            data-aos="fade-up"
            data-aos-delay="200"
          >
            <% for (var i = 0 ; i < agentposts.length ; i ++){%>
            <div class="col-lg-4 col-md-6 portfolio-item filter-app">
              <div class="portfolio-wrap">
                <img
                  src="<%= agentposts[i].image %>"
                  class=""
                  alt=""
                  width="400px"
                  height="280px"
                />
                <div class="portfolio-info">
                  <a href="/adminAdetail/<%= agentposts[i]._id %> ">
                    <h4><%= agentposts[i].title %></h4>
                  </a>
                </div>
              </div>
            </div>

            <%}%>
          </div>

          </div>
        </section>
      </div>
    </section>
  </main>

    
  <!-- Vendor JS Files -->
  <script src="/vendor/aos/aos.js"></script>
  <script src="/javascripts/bootstrap.min.js"></script>
  <script src="/vendor/glightbox/js/glightbox.min.js"></script>
  <script src="/javascripts/isotope.pkgd.min.js"></script>
  <script src="/vendor/swiper/swiper-bundle.min.js"></script>
  <script src="/vendor/typed.js/typed.min.js"></script>
  <script src="/vendor/waypoints/noframework.waypoints.js"></script>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
  

  <!-- Template Main JS File -->
  <script src="/javascripts/mainadmin.js"></script>

  <script>
    function choose(id){
      var opt = confirm('are you sure for delete  this account?');
      if(opt){
        location.href = "/agentuserdelete/"+id;
      }
    }

    function changeStatus(status,id){
        // console.log(status,id);
        $.ajax("/admin/agentchangeStatus", {
          type: "POST",
          data: { status: status,id:id },
          success: function (result) {
            if (result.status == "error") {
              alert("Somethings Was Wrong!");
            } else {
              location.reload();
            }
          },
        });
      }

  </script>

  </body>
</html>
